<f:layout name="Default" />

<f:section name="Title">A list of ranking lists</f:section>

<f:section name="Content">
	<f:if condition="{rankingLists}">
		<f:then>
			<ul>
				<f:for each="{rankingLists}" as="rankingList">
					<li>
						<f:link.action action="show" arguments="{rankingList: rankingList}">{rankingList.name}</f:link.action>
						<f:link.action action="edit" arguments="{rankingList: rankingList}">Edit</f:link.action>
						<f:form action="delete" arguments="{rankingList: rankingList}">
							<f:form.submit value="Delete" />
						</f:form>
					</li>
				</f:for>
			</ul>
		</f:then>
		<f:else>
			<p>No ranking lists created yet.</p>
		</f:else>
	</f:if>
	<p><f:link.action action="new">Create a new ranking list</f:link.action></p>
</f:section>